<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FitnessHabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/gray_700</item>
        <item name="colorSurface">@color/gray_700</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/gray_700</item>
    </style>
</resources> 