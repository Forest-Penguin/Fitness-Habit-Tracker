<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startWorkoutLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Workout Duration Label -->
        <TextView
            android:id="@+id/labelWorkoutDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_duration"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="32dp"
            android:textStyle="bold" />

        <!-- Timer -->
        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="48dp" />

        <!-- Spacer to push buttons to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Add Exercise Button -->
        <Button
            android:id="@+id/btnAddExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_activity"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:backgroundTint="#8000FF"
            android:layout_marginBottom="16dp" />

        <!-- Bottom Row: Settings + Discard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnStartRecording"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start_recording"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:backgroundTint="#8000FF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnStopRecording"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stop_recording"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:backgroundTint="#8000FF"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#673AB7"
        android:padding="8dp"
        android:weightSum="4"
        android:elevation="6dp">

        <Button
            android:id="@+id/navDashboard"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dash"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/navTraining"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/train"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/navGoals"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/goals"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/navHistory"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/history"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
