<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- App Name Title at the Top -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/buttons"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- Centered Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_sign"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question"
            android:textSize="16sp"
            android:textColor="@color/gray_700"
            android:layout_marginBottom="24dp" />

        <!-- Dashboard Button -->
        <Button
            android:id="@+id/btnDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_option"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/buttons"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Start Training Button -->
        <Button
            android:id="@+id/btnStartTraining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_training_option"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/buttons"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Set Goals Button -->
        <Button
            android:id="@+id/btnGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/goals_option"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/buttons"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- View History Button -->
        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_option"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/buttons"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>